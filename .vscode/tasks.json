{
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "gcc",
            "args": [
                "src/main.c",
                "src/file_util.c",
                "src/compfiles.c",
                "src/tokens.c",
                "src/scanner.c",
                "src/dfa.c",
                "src/scanner_util.c",
                "-ansi",
                "-obin/tompiler"
            ],
            "group": {
                "kind":"build", 
                "default":true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "test-compile",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Isrc",
                "-Itests/lib",
                "src/file_util.c",
                "src/compfiles.c",
                "src/tokens.c",
                "src/scanner.c",
                "src/scanner_util.c",
                "src/dfa.c",
                "tests/lib/CuTest.c",
                "tests/lib/std_swapper.c",
                "tests/file_util_test.c",
                "tests/compfiles_test.c",
                "tests/dfa_test.c",
                "tests/main_test.c",
                "tests/tokens_test.c",
                "tests/scanner_test.c",
                "tests/scanner_util_test.c",
                "-otests",
                "-ansi"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        {
            "label": "test-run",
            "type": "shell",
            "dependsOn": "test-compile",
            "command": "tests",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}